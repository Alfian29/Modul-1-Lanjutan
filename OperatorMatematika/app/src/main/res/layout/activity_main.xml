<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sch.id.smktelkom.operatormatematika.MainActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Masukkan Angka Pertama"
        android:id="@+id/txtawal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editawal"
        android:layout_below="@+id/txtawal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtawal"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="89dp"
        android:text="Masukkan Angka Kedua" />

    <EditText
        android:id="@+id/editkedua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="0dp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Pilih Operator"
        android:id="@+id/txtoperator"
        android:layout_below="@+id/editkedua"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnjumlah"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtoperator"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-133dp"
        android:layout_toStartOf="@+id/btnkurang"
        android:text="+" />

    <Button
        android:id="@+id/btnkurang"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtoperator"
        android:layout_marginEnd="-157dp"
        android:layout_marginBottom="-133dp"
        android:layout_toStartOf="@+id/btnkali"
        android:text="-" />

    <Button
        android:id="@+id/btnkali"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtoperator"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="-133dp"
        android:layout_toStartOf="@+id/btnbagi"
        android:text="x" />

    <Button
        android:id="@+id/btnbagi"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtoperator"
        android:layout_marginEnd="-151dp"
        android:layout_marginBottom="-133dp"
        android:layout_toStartOf="@+id/txtoperator"
        android:text=":" />

    <TextView
        android:id="@+id/txthasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnkurang"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="-94dp"
        android:text="Hasil" />

    <EditText
        android:id="@+id/edithasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txthasil"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="0dp" />
</RelativeLayout>